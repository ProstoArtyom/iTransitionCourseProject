@model Theme

<form method="post" class="row">
    <input asp-for="Id" hidden />
    <div class="col-10 offset-1 p-3">
        <div class="col-12 col-lg-6 form-outline mb-3">
            <label asp-for="Name" class="ms-2 text-muted"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                @if (Model.Id == 0)
                {
                    <button type="submit" class="btn btn-primary form-control">
                        Create
                    </button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary form-control">
                        Save
                    </button>
                }
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Theme" asp-action="Index" class="btn btn-outline-primary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}